#!/bin/bash

# Get node hostnames with network suffix
network_suffix="-ib0"
hostnames=($(scontrol show hostname $SLURM_JOB_NODELIST | sed "s/$/$network_suffix/"))

echo "[metadata]"
echo "${hostnames[0]}"
echo "[backends]"
printf "%s\n" "${hostnames[@]:1}"

export DATACLAY_METADATA_HOSTNAME=${hostnames[0]}
export DATACLAY_KV_HOST=${hostnames[0]}
